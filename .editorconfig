root = true
 
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
 
[*.{js,jsx,ts}]
indent_style = space
indent_size = 4
tab_width = 4
 
[*.cs]
indent_style = space
indent_size = 4
tab_width = 4
 
[*.{json,xml,xslt,config,nuspec}]
indent_style = space
indent_size = 2
tab_width = 2
 
[*.html]
indent_style = space
indent_size = 4
tab_width = 4
 
[*.cshtml]
indent_style = space
indent_size = 4
tab_width = 4
 
[*.{css,less,scss}]
indent_style = space
indent_size = 4
tab_width = 4